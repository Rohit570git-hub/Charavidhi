<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardPreventCornerOverlap="true"
    android:layout_gravity="center"
    app:cardElevation="8dp"
    android:layout_margin="10dp"
    android:layout_marginBottom="40dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_farmer"
                android:layout_weight="0.2"
                />

            <TextView
                android:id="@+id/sellerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:gravity="start"
                android:text="Rohit Kumar"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"

                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Rs. 50000"
                android:textColor="#33354E"
                android:textSize="20sp" />

        </LinearLayout>
        <TextView
            android:id="@+id/sellerPlace"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"
            android:drawableStart="@drawable/ic_loaction"
            android:drawableTint="@color/black"
            android:textStyle="normal"
            android:text="   Rajeev Nagar,Patna 800024"/>
        <ImageView
            android:id="@+id/cattleImage"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_gravity="top"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/animalhostel"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="14dp"
                >
            <TextView
                android:id="@+id/cattleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jersy Cow"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20sp"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/milk"
                android:layout_alignParentTop="true"
                />
                <TextView
                    android:id="@+id/milk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Milk:"
                    android:textColor="@color/black"
                    android:paddingEnd="10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_toStartOf="@id/milkAmountTv"
                    android:layout_alignParentTop="true"

                    />
                <TextView
                    android:id="@+id/milkAmountTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20L/Day"
                    android:textColor="@color/black"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age:"
                    android:paddingEnd="10dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                    android:layout_below="@id/cattleName"
                    android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/cattleAgeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/age"
                android:layout_alignBottom="@+id/age"
                android:layout_toEndOf="@+id/age"
                android:text="3 Year"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>