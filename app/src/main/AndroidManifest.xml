<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.charavidhi">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <queries android:name="android.permission.QUERY_ALL_PACKAGES" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Charawidhi">
        <activity android:name=".TransportActivity"
            android:theme="@style/Theme.Charawidhi.NoActionBar">

        </activity>

        <activity android:name=".SellingDetails"
            android:label="Fill Details of your Cattle">

        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/Theme.Charawidhi.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SENDTO" />

                <data android:scheme="mailto" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.Charawidhi.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AccountsActivity"
            android:theme="@style/Theme.Charawidhi.NoActionBar" />
        <activity android:name=".CattleDetails" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Charawidhi.NoActionBar">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>